ScreenMain:
    canvas.before:
        Color:
            rgba: (153/255, 204/255, 255/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        MDLabel:
            text: "Translate"
            halign: 'center'
            bold: True
            pos_hint: {'center_y': .85}
            font_size: 50
        BoxLayout:  
            horizontal: "horizontal"
            spacing: 20
            MDLabel:
                text: "VietNamese"
                pos_hint: {'center_y': .7}
                font_size: 20
                bold: True
                halign: 'center'
                color: rgba("#ff3300")
            MDLabel:
                font_size: 20
                text: "English"
                pos_hint: {'center_y': .7}
                bold: True
                halign: 'center'
                color: rgba("#ff3300")
        BoxLayout:  
            size: root.width, root.height
            horizontal: "horizontal"
            spacing: 20
            MDTextFieldRect:
                id: VietNamese
                size_hint: 1, None
                height: "100dp"
                pos_hint: {'center_y': .9}
                hint_text: 'Xin chào'
            MDLabel:
                size_hint: 1, None
                height: "120dp"
                pos_hint: {'center_y': .9}
                text: str(root.text_Translate)
                halign: "center"
                bold: True
                canvas.before:
                    Color:
                        rgba: (255/255, 255/255, 204/255, 1)
                    Rectangle:
                        size: self.width, self.height-20
                        pos: self.center_x-100, self.center_y-50
        MDFillRoundFlatIconButton:
            text: "Dịch"
            icon: "google-translate"
            font_size: 20
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_press: root.TranslateText()